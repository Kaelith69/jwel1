rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Products: public read, admin-only write
    // Only authenticated users (like sayanth.tm9090@gmail.com) can modify products
    match /products/{id} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Orders: Allow unauthenticated CREATE for checkout, authenticated read/update/delete
    match /orders/{orderId} {
      allow create: if isValidOrder();
      allow read, update, delete: if request.auth != null;
    }

    function isValidOrder() {
      return request.resource.data.orderId is string
        && request.resource.data.status is string
        && request.resource.data.total is number
        && request.resource.data.itemCount is number
        && request.resource.data.items is list
        && request.resource.data.items.size() > 0
        && request.resource.data.customer is map
        && request.resource.data.customer.name is string
        && request.resource.data.customer.mobile is string;
    }

    // Settings: public read, admin-only write
    match /settings/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Default deny for everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
